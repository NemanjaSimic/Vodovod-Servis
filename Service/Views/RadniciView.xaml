<UserControl x:Class="Service.Views.RadniciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Service.Views"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">
	<Grid Background="Blue" Margin="0,0,0,0.4">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="auto" MinHeight="493.6"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" >
			<Button Command="{Binding CreateCommand}" Content="Napravi novog radnika" HorizontalAlignment="Left" Height="36" Margin="9,211,0,0" VerticalAlignment="Top" Width="356" FontFamily="Sitka Small" FontSize="24" FontWeight="Bold" Background="#FF769CB0"/>
			<TextBox HorizontalAlignment="Left" Height="43" Margin="134,0,0,0" TextWrapping="Wrap" Text="{Binding NewZaposleni.IME_ZAP, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" FontSize="20"/>
			<TextBox HorizontalAlignment="Left" Height="43" Margin="134,68,0,0" TextWrapping="Wrap" Text="{Binding NewZaposleni.PREZ_ZAP, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" FontSize="20"/>
			<TextBox HorizontalAlignment="Left" Height="43" Margin="134,138,0,0" TextWrapping="Wrap" Text="{Binding NewZaposleni.JMBG_ZAP, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" FontSize="20"/>
			<Label Content="IME:" HorizontalAlignment="Left" Height="43" Margin="10,0,0,0" VerticalAlignment="Top" Width="119" FontWeight="Bold" FontSize="18"/>
			<Label Content="PREZIME:" HorizontalAlignment="Left" Height="43" Margin="9,68,0,0" VerticalAlignment="Top" Width="120" FontSize="18" FontWeight="Bold"/>
			<Label Content="JMBG:" HorizontalAlignment="Left" Height="43" Margin="10,138,0,0" VerticalAlignment="Top" Width="119" FontSize="18" FontWeight="Bold"/>
			<TextBlock HorizontalAlignment="Left" Height="20" Margin="134,48,0,0" TextWrapping="Wrap" Text="{Binding ValidationIme, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" Background="{x:Null}" Foreground="Red"/>
			<TextBlock HorizontalAlignment="Left" Height="20" Margin="134,116,0,0" TextWrapping="Wrap" Text="{Binding ValidationPrez, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" Background="{x:Null}" Foreground="Red"/>
			<TextBlock HorizontalAlignment="Left" Height="20" Margin="134,191,0,0" TextWrapping="Wrap" Text="{Binding ValidationJMBG, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" Background="{x:Null}" Foreground="Red" />
			<Button Command="{Binding PutInCommand}" Content="Ubaci radnika u ekipu" HorizontalAlignment="Left" Height="36" Margin="438,112,0,0" VerticalAlignment="Top" Width="303" FontFamily="Sitka Small" FontSize="24" FontWeight="Bold" Background="#FF769CB0"/>
			<ComboBox ItemsSource="{Binding Ekipe, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding SelectedEkipa, UpdateSourceTrigger=PropertyChanged}" Margin="481,41,97,188.8" />
			<Label Content="ID EKIPE ZA REZERVACIJU DELA:" HorizontalAlignment="Left" Height="38" Margin="444,-2,0,0" VerticalAlignment="Top" Width="297" FontWeight="Bold" FontSize="18"/>
			<TextBlock HorizontalAlignment="Left" Height="20" Margin="481,87,0,0" TextWrapping="Wrap" Text="{Binding ValidationEkipa, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="222" Background="{x:Null}" Foreground="Red" />
			<Button Command="{Binding TakeOutCommand}" Content="Izbaci radnika iz ekipe" HorizontalAlignment="Left" Height="36" Margin="438,153,0,0" VerticalAlignment="Top" Width="303" FontFamily="Sitka Small" FontSize="24" FontWeight="Bold" Background="#FF769CB0"/>
			<Button Command="{Binding ProsecnaDubinaCommand}" Content="Prosecna dubina" HorizontalAlignment="Left" Height="36" Margin="400,211,0,0" VerticalAlignment="Top" Width="233" FontFamily="Sitka Small" FontSize="24" FontWeight="Bold" Background="#FF769CB0"/>
			<TextBox IsReadOnly="True" HorizontalAlignment="Left" Height="36" Margin="658,211,0,0" TextWrapping="Wrap" Text="{Binding ProsecnaDubina, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="83" FontSize="20"/>

		</Grid>
		<Grid Grid.Row="1" Margin="0,1.2,0,0.4">
			<DataGrid ItemsSource="{Binding Radnici, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedRadnik, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Height="397" Margin="10,9,0,0" VerticalAlignment="Top" Width="780">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Ime" Binding="{Binding ZAPOSLENI.IME_ZAP, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
					<DataGridTextColumn Header="Prezime"  Binding="{Binding ZAPOSLENI.PREZ_ZAP, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
					<DataGridTextColumn Header="JMBG"  Binding="{Binding ZAPOSLENI.JMBG_ZAP, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
					<DataGridTextColumn Header="EKIPA"  Binding="{Binding EKIPA_ID_EK, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
				</DataGrid.Columns>
			</DataGrid>
			<Button Command="{Binding UpdateCommand}" Content="Izmeni" HorizontalAlignment="Left" Height="39" Margin="10,443,0,0" VerticalAlignment="Top" Width="263"/>
			<Button Command="{Binding DeleteCommand}" Content="Izbrisi" HorizontalAlignment="Left" Height="40" Margin="527,442,0,0" VerticalAlignment="Top" Width="263"/>
		</Grid>

	</Grid>
</UserControl>
